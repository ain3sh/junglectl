{
  "name": "climb-cli",
  "version": "2.0.0",
  "description": "Climb â€” ascend the arg tree. Universal self-adapting TUI for ANY CLI - git, docker, npm, kubectl, and more",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "climb": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "build:sea": "node scripts/build-sea.cjs",
    "build:sea:current": "node scripts/build-sea.cjs --current-only",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check && npm run build",
    "pack-test": "npm pack && tar -tzf climb-cli-2.0.0.tgz | head -30"
  },
  "keywords": [
    "cli",
    "tui",
    "interactive",
    "terminal",
    "git",
    "docker",
    "kubectl",
    "universal-cli",
    "cli-explorer",
    "command-discovery",
    "developer-tools",
    "introspection",
    "self-adapting"
  ],
  "author": "Ainesh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ain3sh/climb.git"
  },
  "bugs": {
    "url": "https://github.com/ain3sh/climb/issues"
  },
  "homepage": "https://github.com/ain3sh/climb#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.4",
    "@inquirer/search": "^3.2.0",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "ora": "^8.2.0",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.17.1",
    "esbuild": "^0.20.0",
    "postject": "^1.0.0-alpha.6",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
